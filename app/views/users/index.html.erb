<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| 
      if current_user != user %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= if current_user.friendships.where(:friend_id => user.id).where(:user_id => current_user.id).empty?
          link_to 'Add Friend', friendships_path(:friend_id => user), :method => :post
          end %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

